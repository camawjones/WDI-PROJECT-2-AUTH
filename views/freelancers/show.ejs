<div class="large-12 columns">
  <img src="<%= freelancer.image %>" alt="<%= freelancer.name %>">
  <h2><%= freelancer.name %></h2>
  <% if(locals.isAuthenticated && freelancer.belongsTo(user)) { %>
    <a href="/freelancers/<%= freelancer.id %>/edit" class="button">Edit</a>

    <form method="POST" action="/freelancers/<%= freelancer.id %>">
      <input type="hidden" name="_method" value="DELETE">
      <button class="button alert">Delete</button>
    </form>
  <% } %>

  <p>
    <%= freelancer.skills.skill1 %><br>
    <% if(freelancer.skills.skill2) { %><%= freelancer.skills.skill2 %><br><% } %>
  </p>

  <p>
    <% while(freelancer.rating--) { %> &rating; <% } %>
  </p>

  <small>Added by: <%= freelancer.createdBy.username %></small>

  <section>
    <h3>Comments</h3>
    <% freelancer.comments.forEach((comment) => { %>
      <p><%= comment.content %></p>
      <small><%= comment.createdBy.username %></small>
    <% }) %>
  </section>

  <% if(locals.isAuthenticated) { %>
    <section>
      <h3>Leave a comment</h3>
      <form method="POST" action="/freelancers/<%= freelancer.id %>/comments">
        <textarea name="content" id="content" placeholder="Comment" required maxlength="255"></textarea>
        <button class="button">Leave a comment</button>
      </form>
    </section>
  <% } %>
</div>
